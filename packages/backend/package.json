{
  "name": "@project-game-atlas/backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "db:seed:platform-types": "ts-node -r tsconfig-paths/register --project tsconfig.app.json src/app/modules/seeding/commands/platforms/seed-platform-types.command.ts",
    "db:seed:platforms": "ts-node -r tsconfig-paths/register --project tsconfig.app.json src/app/modules/seeding/commands/platforms/seed-platforms.command.ts",
    "db:seed:companies": "ts-node -r tsconfig-paths/register --project tsconfig.app.json src/app/modules/seeding/commands/companies/seed-companies.command.ts",
    "db:seed:genres": "ts-node -r tsconfig-paths/register --project tsconfig.app.json src/app/modules/seeding/commands/genres/seed-genres.command.ts",
    "db:seed:keywords": "ts-node -r tsconfig-paths/register --project tsconfig.app.json src/app/modules/seeding/commands/keywords/seed-keywords.command.ts",
    "db:seed:covers": "ts-node -r tsconfig-paths/register --project tsconfig.app.json src/app/modules/seeding/commands/covers/seed-covers.command.ts",
    "db:seed:screenshots": "ts-node -r tsconfig-paths/register --project tsconfig.app.json src/app/modules/seeding/commands/screenshots/seed-screenshots.command.ts",
    "db:seed:game-companies": "ts-node -r tsconfig-paths/register --project tsconfig.app.json src/app/modules/seeding/commands/companies/seed-game-companies.command.ts",
    "db:seed:games": "ts-node -r tsconfig-paths/register --project tsconfig.app.json src/app/modules/seeding/commands/games/seed-games.command.ts"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "packages/backend"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/packages/backend/dist/package.json",
          "{workspaceRoot}/packages/backend/dist/yarn.lock"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/packages/backend/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@project-game-atlas/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@project-game-atlas/backend:build:development"
          },
          "production": {
            "buildTarget": "@project-game-atlas/backend:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/schedule": "^6.1.0",
    "cache-manager": "^7.2.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/testing": "^11.0.0"
  }
}
